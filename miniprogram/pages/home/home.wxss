/* pages/home/home.wxss */

.container {
  width: 100%;
  min-height: 100vh;
  background-color: #363b40;
  box-sizing: border-box;
  padding: 100rpx 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.search {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  box-shadow: 0 0 16rpx #222;
  transform: translateY(0);
  transition: all .3s ease-in-out;
}

.header {
  width: 100%;
  padding: 20rpx 0 40rpx;
  color: #999;
}

.card {
  margin-bottom: 20rpx;
}

.add-btn {
  font-size: 150rpx;
  color: #fde23f;
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  border-radius: 50%;
  text-align: center;
  vertical-align: middle;
}

.empty {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 80rpx;
}

.heartBeat {
  animation: 0.6s heartBeat 1;
}

@keyframes heartBeat {
  0% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }

  14% {
    -webkit-transform: scale(1.3);
    transform: scale(1.3);
  }

  28% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }

  42% {
    -webkit-transform: scale(1.3);
    transform: scale(1.3);
  }

  70% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

.cancelSearchBtn {
  padding:20rpx;
  border-radius: 10rpx;
  background-color: #fde23f;
  color: #333;
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 0 10rpx #111;
}

.footer{
  width: 100%;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;

  color:#999;
}

.footer .line {
  width:200rpx;
  height:1rpx;
  background-color: #666;
}

.searchBarHide{
  transform: translateY(-100%);
  /* top: -100%; */
}
