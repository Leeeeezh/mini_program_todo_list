/* pages/home/home.wxss */

.container {
  width: 100%;
  min-height: 100vh;
  background-color: #363b40;
  box-sizing: border-box;
  padding: 100rpx 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.search {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  box-shadow: 0 0 16rpx #222;
  transform: translateY(0);
  transition: all 0.3s ease-in-out;
}

.header {
  width: 100%;
  padding: 20rpx 0 40rpx;
  color: #999;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.orderBy, .filter {
  padding: 20rpx;
  /* background-color: #2e3033; */
  border-radius: 20rpx;
}

.orderBy span {
  padding: 0 10rpx;
}

.tapped {
  background-color: rgba(255, 255, 255, 0.1);
}

.card {
  margin-bottom: 20rpx;
}

.add-btn {
  font-size: 150rpx;
  color: #fde23f;
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  border-radius: 50%;
  text-align: center;
  vertical-align: middle;
  text-shadow: 0 0 14rpx #222;
}

.empty {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 80rpx;
}

.heartBeat {
  animation: 0.6s heartBeat 1;
}

@keyframes heartBeat {
  0% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }

  14% {
    -webkit-transform: scale(1.3);
    transform: scale(1.3);
  }

  28% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }

  42% {
    -webkit-transform: scale(1.3);
    transform: scale(1.3);
  }

  70% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

.cancelSearchBtn {
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #fde23f;
  color: #333;
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 0 10rpx #111;
}

.footer {
  width: 100%;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color: #999;
}

.footer .line {
  width: 200rpx;
  height: 1rpx;
  background-color: #666;
}

.searchBarHide {
  transform: translateY(-100%);
  /* top: -100%; */
}

.filter {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.dot {
  display: inline-block;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  box-sizing: border-box;
}

.pannel {
  position: absolute;
  z-index: 2000;
  top: 230rpx;
  left: 50%;
  transform: translateX(-60%);
}

.red {
  background-color: red;
}

.yellow {
  background-color: #fde23f;
}

.green {
  background-color: #4caf50;
}

.blue {
  background-color: #03a9f4;
}

.purple {
  background-color: #9c27b0;
}

.pink {
  background-color: #ff4081;
}

.orange {
  background-color: #ffa000;
}

.white {
  background-color: #fff;
}

.none {
  background-color: rgba(255,255,255,.5);
  /* border: 6rpx solid #eee; */
}
